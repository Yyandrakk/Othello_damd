<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/reg_pass"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/field_pass"
        app:layout_constraintLeft_toLeftOf="@+id/reg_username"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/reg_username"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_username"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/reg_passc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/field_passc"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/reg_pass"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_pass"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/reg_pass"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/reg_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="219dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:text="Registro"
        app:layout_constraintBaseline_toBaselineOf="@+id/reg_passc"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/reg_passc"
        android:layout_marginLeft="36dp" />

    <CheckBox
        android:id="@+id/reg_mostrar"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="@string/check_pass"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/reg_username"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/reg_username"
        android:layout_marginLeft="36dp" />

    <EditText
        android:id="@+id/reg_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/field_nick"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="57dp" />

</android.support.constraint.ConstraintLayout>