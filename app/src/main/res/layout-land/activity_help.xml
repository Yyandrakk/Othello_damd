<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:background="@color/colorBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="48dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_home_black_24dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/help_inicio"
            app:layout_constraintRight_toRightOf="@+id/imageButton"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="@+id/help_inicio" />

        <TextView
            android:id="@+id/help_inicio"
            android:layout_width="285dp"
            android:layout_height="0dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/help_inicio"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/help_score"
            android:layout_marginStart="13dp"
            android:layout_marginTop="16dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintLeft_toRightOf="@+id/imageView3"
            android:layout_marginLeft="13dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="0dp"
            android:layout_height="38dp"
            app:srcCompat="@drawable/ic_stars_black_24dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/help_setting"
            app:layout_constraintRight_toRightOf="@+id/imageView4"
            android:layout_marginTop="55dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="56dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/help_inicio" />

        <TextView
            android:id="@+id/help_score"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/help_score"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/help_setting"
            android:layout_marginStart="9dp"
            app:layout_constraintRight_toRightOf="@+id/help_inicio"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="7dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintRight_toLeftOf="@+id/help_setting"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/help_setting"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="3dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/help_setting"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="9dp" />

        <TextView
            android:id="@+id/help_setting"
            android:layout_width="158dp"
            android:layout_height="43dp"
            android:layout_marginEnd="59dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/help_setting"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="63dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintRight_toRightOf="@+id/imageView5"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            android:layout_marginRight="59dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_exit_to_app_black_24dp"
            android:layout_marginStart="240dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="240dp" />

        <TextView
            android:id="@+id/help_exit"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/help_exit"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="11dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintLeft_toRightOf="@+id/imageView5"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/help_add"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_marginStart="9dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/help_add"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="9dp"
            app:layout_constraintRight_toRightOf="@+id/help_exit"
            android:layout_marginTop="54dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="55dp"
            app:layout_constraintTop_toTopOf="@+id/help_setting"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp" />

    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/menu_navigation" />
</android.support.v4.widget.DrawerLayout>
