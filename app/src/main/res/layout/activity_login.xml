<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/login_username"
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nick"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="72dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.508" />

    <EditText
        android:id="@+id/login_registro"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPassword|textVisiblePassword"
        android:text="Password"
        tools:layout_conversion_absoluteHeight="41dp"
        tools:layout_conversion_absoluteWidth="273dp"
        tools:layout_conversion_absoluteX="44dp"
        tools:layout_conversion_absoluteY="165dp"
        tools:layout_editor_absoluteX="38dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/login_username" />

    <CheckBox
        android:id="@+id/login_mostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mostrar contraseÃ±a"
        tools:layout_editor_absoluteX="39dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/login_registro" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="285dp"
        android:layout_height="43dp"
        android:text="Login"
        tools:layout_editor_absoluteX="38dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/login_mostrar" />

    <Button
        android:id="@+id/new_user_button"
        android:layout_width="287dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:text="Registro"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        tools:layout_editor_absoluteX="37dp" />

</android.support.constraint.ConstraintLayout>